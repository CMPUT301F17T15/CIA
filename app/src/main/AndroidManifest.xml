<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmput301.cia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.events.HistoryActivity"
            android:label="Habit History" />
        <activity
            android:name=".activities.events.FilterHabitsActivity"
            android:label="@string/title_activity_filter_events" />
        <activity
            android:name=".activities.HomePageActivity"
            android:label="Habits"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.habits.HabitViewActivity"
            android:label="Habit Details" />
        <activity
            android:name=".activities.habits.StatisticActivity"
            android:label="Habit Statistics"/>
        <activity
            android:name=".activities.habits.CreateHabitActivity"
            android:label="Create Habit" />
        <activity
            android:name=".activities.habits.StatisticViewActivity"
            android:label="Statistics" />
        <activity
            android:name=".activities.habits.SingleStatisticViewActivity"
            android:label="Statistics" />
        <activity
            android:name=".activities.events.CreateHabitEventActivity"
            android:label="Create Habit Event" />
        <activity
            android:name=".activities.events.HabitEventViewActivity"
            android:label="Habit Event" />
        <activity
            android:name=".activities.habits.EditHabitActivity"
            android:label="Edit Habit" />
        <activity
            android:name=".activities.users.UserProfileActivity"
            android:label="Profile" />
        <activity
            android:name=".activities.users.RankingsActivity"
            android:label="Rankings" />
        <activity
            android:name=".activities.users.ViewFollowedUsersActivity"
            android:label="Followed Users" />
        <activity
            android:name=".activities.users.SearchUsersFragment"
            android:label="Search Users" />
        <activity
            android:name=".activities.users.FollowRequestsFragment"
            android:label="Follow Requests" />

        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/. 
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.users.ViewEventsMapActivity"
            android:label="@string/title_activity_view_nearby_events">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".activities.templates.LocationRequestingActivity" /> -->
        <activity android:name=".activities.users.SendMessageActivity" />
        <activity
            android:name=".activities.HomeTabbedActivity"
            android:label="@string/title_activity_home_tabbed" />
        <activity android:name=".activities.DashboardFragment"></activity>
    </application>

</manifest>